<Window x:Class="Modul5.FlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fligth Window" MinHeight="350"
        MinWidth="400"
        MaxHeight="350"
        MaxWidth="400">
   

               

        
    <Grid>
        <Button Content="Start" Height="23" HorizontalAlignment="Left" Margin="20,276,0,0" Name="btnStart" VerticalAlignment="Top" Width="75" Click="btnStart_Click" />
        <Button Content="Land" Height="23" HorizontalAlignment="Right" Margin="0,276,12,0" Name="btnLand" VerticalAlignment="Top" Width="75" Click="btnLand_Click" />

        <ComboBox Height="23" HorizontalAlignment="Left" Margin="135,276,0,0" Name="cmbRoute" VerticalAlignment="Top" Width="120" DataContext="StaticResource RouteChangeType" SelectionChanged="cmbRoute_SelectionChanged" />
        <Image Height="231" HorizontalAlignment="Left" Margin="20,20,0,0" Name="imgFlight" Stretch="Fill" VerticalAlignment="Top" Width="337" />
    </Grid>
</Window>
